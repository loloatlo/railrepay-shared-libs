{
  "name": "@railrepay/openapi-validator",
  "version": "1.0.0",
  "description": "OpenAPI 3.0 request/response validation middleware for RailRepay microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
