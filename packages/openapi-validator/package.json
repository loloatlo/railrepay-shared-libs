  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.11.5",
    "express": "^5.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "@railrepay/winston-logger": "^1.0.0",
